---
const { class: className, id } = Astro.props;
---

<div class="project-panel bg-white dark:bg-[#1B2731] relative">
  <section
    id={id}
    data-section={id}
    class=`section ${className} py-11 md:pt-16 lg:pt-20 px-4 sm:px-8 md:px-20 max-w-7xl mx-auto lg:min-h-[768px]`
  >
    <slot />
  </section>
</div>
