---
import GitHub from "./icon/GitHub.astro";
import GitLab from "./icon/GitLab.astro";
import LinkeIn from "./icon/Linkedin.astro"

const socialLinks = [
  {
    id: 1,
    title: "Keiver Pacheco Github Profile",
    link: "https://github.com/KeivrP",
    svg: GitHub
  },
  {
    id: 2,
    title: "Keiver Pacheco LinkedIn Profile",
    link: "https://www.linkedin.com/in/keiverpp/",
    svg: LinkeIn
    
  },
  {
    id: 2,
    title: "Keiver Pacheco LinkedIn Profile",
    link: "https://gitlab.com/KeivrP",
    svg: GitLab
    
  }
];

const navLinks = [
  {
    url: "#top",
    text: "Welcome",
  },
  {
    url: "#experiencia",
    text: "Who am i?",
  },
  {
    url: "#proyectos",
    text: "Projects",
  },
  {
    url: "#quien-soy",
    text: "Contact",
  },
];

const page = 'index'
---

<!-- Definimos el componente -->
<section >
  <!-- Aquí va el código del componente -->
  {page === "index" ? (
    <div class="hidden fixed left-10 bottom-1/3 md:flex flex-col w-6 h-52 items-center justify-between">
      {navLinks.map((nav) => {
        return (
          <a
            title={nav.text}
            href={nav.url}
            class={`transition-all outline-marrsdark dark:outline-textlight hover:bg-marrsgreen dark:hover:bg-carrigreen ${
              "currentSection" === nav.text.toLowerCase()
                ? "bg-marrsgreen dark:bg-carrigreen rotate-0"
                : "opacity-50 focus-visible:opacity-100 hover:opacity-80 rotate-45 hover:rotate-12"
            } w-3 h-3 border-2 border-marrsgreen dark:border-carrigreen`}
          ></a>
        );
      })}
    </div>
  ) : (
    <div class="hidden fixed left-10 bottom-0 md:flex flex-col w-6 h-56 items-center justify-between">
      <div class="-rotate-90 text-lg tracking-widest">
        <a
          href={`mailto:${'krpachecop@gmail.com'}`}
          class="link-outline hover:text-marrsgreen dark:hover:text-carrigreen"
        >
          [hola]
        </a>
      </div>
      <div class="w-40 h-1 bg-bgdark dark:bg-bglight rotate-90"></div>
    </div>
  )}
  <div class="hidden fixed right-10 bottom-0 md:flex flex-col w-6 h-[17rem] items-center justify-between">
    <div class="flex flex-col space-y-4">
      {socialLinks.map((social, index) => (
        <a
          title={social.title}
          href={social.link}
          class="scale-110 rounded link-outline"
        >
         <social.svg class="size-5" />
        </a>
      ))}
    </div>
    <div class="w-80 h-1 bg-bgdark dark:bg-bglight rotate-90"></div>
  </div>
</section>
