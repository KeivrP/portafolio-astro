    25% {
      transform: translateY(-50px) translateX(25px) rotate(-2deg);
    }
    50% {
      transform: translateY(0) translateX(0) rotate(0deg);
    }
    75% {
      transform: translateY(80px) translateX(-25px) rotate(2deg);
    }
    100% {
      transform: translateY(0) translateX(40) rotate(0deg);
    }
  }

  .image-animation img {
    animation: rotate 6s linear infinite;
  }
</style>
